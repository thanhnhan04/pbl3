            /* Border radiuses */
            --br-3xs: 10px;
        }

        .thng-tin-c-nhn-item {
            position: absolute;
            top: 0;
            left: 0;
            background-color: var(--color-darkslategray);
            width: 289px;
            height: 90px;
        }

        .thng-tin-c1 {
            position: absolute;
            top: 33px;
            left: 55px;
            font-weight: 500;
            display: inline-block;
            width: 222px;
            height: 32px;
        }

        .thng-tin-c-nhn1 {
            position: absolute;
            top: 220px;
            left: 0;
            width: 289px;
            height: 90px;
            cursor: pointer;
        }

        .rectangle-icon,
        .user011 {
            position: absolute;
            top: 0;
            left: 0;
            width: 289px;
            height: 100px;
        }

        .user011 {
            top: 36.5px;
            left: 59.4px;
            display: inline-block;
            width: 174.2px;
            height: 44.8px;
        }

        .n-1-icon1 {
            position: absolute;
            top: 13px;
