        function confirmDelete(maNv) {
            if (confirm('Bạn có chắc muốn xóa nhân viên có mã ' + maNv + ' không?')) {
                // Gửi yêu cầu xóa đến server bằng Ajax
                fetch('/Quanly/RemoveEmployeeFromPhongBan?maNv=' + maNv, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                    .then(response => {
                        if (response.ok) {
                            // Xóa thành công, có thể cập nhật lại danh sách nhân viên hoặc làm gì đó khác.
                            location.reload(); // Tải lại trang để cập nhật danh sách
                        } else {
                            alert('Có lỗi xảy ra khi xóa nhân viên.');
                        }
                    })
                    .catch(error => {
                        console.error('Lỗi:', error);
                        alert('Có lỗi xảy ra khi xóa nhân viên.');
                    });
            }
