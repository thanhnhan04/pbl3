@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, width=device-width" />

    <link rel="stylesheet" href="./global.css" />
    <link rel="stylesheet" href="./lch-lm-vic-c-nhn.css" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Inter:wght@500;600;700&display=swap" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Irish Grover:wght@400&display=swap" />
    <style>
        body {
            margin: 0;
            line-height: normal;
        }

        :root {
            /* fonts */
            --font-inter: Inter;
            --font-irish-grover: "Irish Grover";
            /* font sizes */
            --font-size-xl: 20px;
            --font-size-3xl: 22px;
            --font-size-31xl: 50px;
            /* Colors */
            --color-honeydew: #e2ffe1;
            --color-black: #000;
            --color-white: #fff;
            --color-darkslategray: rgba(48, 46, 46, 0.89);
            --color-forestgreen-100: rgba(39, 162, 58, 0.8);
            --color-forestgreen-200: rgba(49, 162, 39, 0.8);
            /* Border radiuses */
            --br-3xs: 10px;
        }

        .thng-tin-c-nhn-item {
            position: absolute;
            top: 0;
            left: 0;
            background-color: var(--color-darkslategray);
            width: 289px;
            height: 90px;
        }

        .thng-tin-c1 {
            position: absolute;
            top: 33px;
            left: 55px;
            font-weight: 500;
            display: inline-block;
            width: 222px;
            height: 32px;
        }

        .thng-tin-c-nhn1 {
            position: absolute;
            top: 220px;
            left: 0;
            width: 289px;
            height: 90px;
            cursor: pointer;
        }

        .rectangle-icon,
        .user011 {
            position: absolute;
            top: 0;
            left: 0;
            width: 289px;
            height: 100px;
        }

        .user011 {
            top: 36.5px;
            left: 59.4px;
            display: inline-block;
            width: 174.2px;
            height: 44.8px;
        }

        .n-1-icon1 {
            position: absolute;
            top: 13px;
            left: 55px;
            width: 75px;
            height: 75px;
            object-fit: cover;
        }

        .vector-group {
            position: absolute;
            top: 120px;
            left: 0;
            width: 289px;
            height: 100px;
            text-align: right;
        }

        .lch-lm-vic-c-nhn-child {
            position: absolute;
            top: 490px;
            left: 0;
            background-color: var(--color-forestgreen-100);
            width: 289px;
            height: 534px;
            overflow: hidden;
        }

        .binh-minh-hotel1 {
            position: absolute;
            top: 0;
            left: 148px;
            display: inline-block;
            width: 279px;
            height: 111px;
        }

        .group-child2,
        .group-child3,
        .group-child4 {
            position: absolute;
            top: 0;
            left: 0;
            border-radius: var(--br-3xs);
            background-color: var(--color-white);
            border: 1px solid var(--color-black);
            box-sizing: border-box;
            width: 160px;
            height: 50px;
            cursor: pointer;
        }

        .group-child3,
        .group-child4 {
            left: 170px;
        }

        .group-child4 {
            left: 340px;
        }

        .i-mt-khu1,
        .ng-xut1,
        .trang-ch1 {
            position: absolute;
            top: 13px;
            left: 33px;
            font-weight: 500;
            display: inline-block;
            width: 116px;
            height: 28px;
        }

        .i-mt-khu1,
        .ng-xut1 {
            left: 191px;
            width: 134px;
        }

        .ng-xut1 {
            left: 372px;
            width: 116px;
        }

        .rectangle-group {
            position: absolute;
            top: 35px;
            left: 900px;
            width: 500px;
            height: 50px;
            font-size: var(--font-size-xl);
            color: var(--color-black);
            font-family: var(--font-inter);
        }

        .binh-minh-hotel-group {
            position: absolute;
            top: 0;
            left: 0;
            background-color: var(--color-forestgreen-200);
            width: 1550px;
            height: 120px;
            overflow: hidden;
            font-size: var(--font-size-31xl);
            font-family: var(--font-irish-grover);
        }

        .istockphoto-1420738401-170667a-icon1 {
            position: absolute;
            top: 13px;
            left: 15px;
            width: 107px;
            height: 96px;
            object-fit: cover;
        }

        .lch-lm-vic-item {
            position: absolute;
            top: 0;
            left: 0;
            background-color: var(--color-black);
            width: 289px;
            height: 90px;
        }

        .lch-lm-vic3 {
            position: absolute;
            top: 28.5px;
            left: 65px;
            font-weight: 500;
            display: inline-block;
            width: 147.9px;
            height: 37px;
        }

        .lch-lm-vic-c-nhn-item,
        .lch-lm-vic2 {
            position: absolute;
            top: 310px;
            left: 0;
            width: 289px;
            height: 90px;
        }

        .lch-lm-vic-c-nhn-item {
            top: 400px;
            background-color: var(--color-darkslategray);
            cursor: pointer;
        }

        .lng-c-nhn3 {
            position: absolute;
            top: 428px;
            left: 65.5px;
            font-weight: 500;
            display: inline-block;
            width: 180px;
            height: 36px;
            cursor: pointer;
        }

        .lch-lm-vic4 {
            position: absolute;
            top: -1px;
            left: -3px;
            font-weight: 600;
            display: flex;
            align-items: flex-end;
            justify-content: center;
            width: 240px;
            height: 30px;
        }

        .lch-lm-vic-c-nhn-wrapper {
            position: absolute;
            top: 0;
            left: 0;
            background-color: var(--color-honeydew);
            width: 1104px;
            height: 32px;
            overflow: hidden;
        }

        .lch-lm-vic-c-nhn-inner {
            position: absolute;
            top: 140px;
            left: 311px;
            width: 1104px;
            height: 32px;
            text-align: center;
            font-size: var(--font-size-xl);
            color: var(--color-black);
        }

        .lch,
        .lch-child {
            position: absolute;
            width: 1111px;
            height: 802px;
        }

        .table-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Đảm bảo bảng được căn giữa theo chiều dọc của trang */
        }

        .lch-child {
            top: 0;
            left: 0;
            background-color: var(--color-white);
        }

        .lch {
            top: 208px;
            left: 307px;
        }

        .mytable {
            position: absolute;
            top: 250px;
            left: 350px;
         /*    transform: translate(-50%, -50%); */
            max-width: 100%; /* Độ rộng tối đa của bảng */
            overflow-x: auto; /* Tạo thanh cuộn ngang nếu bảng vượt quá chiều rộng */
            max-height: 800px; /* Chiều cao tối đa của bảng (điều chỉnh theo nhu cầu của bạn) */
            overflow-y: auto; /* Tạo thanh cuộn dọc nếu bảng vượt quá chiều cao */
        }

        .custom-table {
            border-collapse: collapse;
            width: 1000px;
        }

        .mytable thead {
            position: sticky;
            top: 0; /* Giữ phần head ở vị trí đầu tiên */
            z-index: 1; /* Đảm bảo phần head hiển thị trên cùng */
            background-color: #f2f2f2; /* Màu nền cho phần head */
        }

        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
            height: 20px;
            color: var(--color-black);
            font-size: 16px;
            background-color: var(--color-white);
        }

        p {
            font-size: 24px;
            color: black;
        }

        th:nth-child(1), td:nth-child(1) {
            width: 2px; /* Cột đầu tiên */
        }

        th:nth-child(2), td:nth-child(2) {
            width: 10px; /* Cột thứ hai */
        }

        th:nth-child(3), td:nth-child(3) {
            width: 10px; /* Cột thứ ba */
        }

        th:nth-child(4), td:nth-child(4) {
            width: 15px; /* Cột đầu tiên */
        }



        th {
            background-color: rgba(39, 162, 58, 0.8);
        }


        .dang-xuat-link {
            position: absolute;
            top: 45px;
            right: 140px;
            font-weight: 500;
            display: inline-block;
            font-size: var(--font-size-xl); /* Điều chỉnh kích thước chữ */
            color: black; /* Màu chữ */
            font-family: var(--font-inter); /* Kiểu font chữ */
            text-decoration: none; /* Loại bỏ gạch chân */
        }

        .lch-lm-vic-c-nhn {
            width: 100%;
            position: relative;
            height: 1024px;
            overflow: hidden;
            background-image: url(https://scontent.xx.fbcdn.net/v/t1.15752-9/435229924_1387605835555899_1676943816951711557_n.jpg?_nc_cat=108&ccb=1-7&_nc_sid=5f2048&_nc_eui2=AeFJMnRkpBX4VXFUqgQe8t4MAnEj3tDXrhwCcSPe0NeuHBfYQCRlTLYqRSzjZcYLanAmYfZQt1qLkkGk46N3Lk1j&_nc_ohc=4qGMy2x1nkAQ7kNvgF8QXEK&_nc_ad=z-m&_nc_cid=0&_nc_ht=scontent.xx&oh=03_Q7cD1QFmiijBIT5AWF2AnVv8f4IrwN93aRQe726l3hCJrs0eXg&oe=666F181D);
            background-size: cover;
            background-repeat: no-repeat;
            background-position: top;
            text-align: left;
            font-size: var(--font-size-3xl);
            color: var(--color-white);
            font-family: var(--font-inter);
        }

    </style>
</head>
<body>
    <div class="lch-lm-vic-c-nhn">
        <div class="thng-tin-c-nhn1" id="thngTinCNhn">
            <div class="thng-tin-c-nhn-item"></div>
            <a asp-controller="Nhanvien" asp-action="thongtin" style="text-decoration: none; color:white;" class="thng-tin-c1">Thông tin cá nhân</a>
        </div>
        <div class="vector-group">
            <img class="rectangle-icon" alt="" src="https://scontent.fdad3-5.fna.fbcdn.net/v/t1.15752-9/442004726_1155112629064788_4809483291193087054_n.png?_nc_cat=109&ccb=1-7&_nc_sid=5f2048&_nc_eui2=AeHrD5OfpYJ0RmhPxA5UuE0pzzkV5ibsz_rPORXmJuzP-g5_AOzGUFS2B3_hKdyHimID-BRjgS6rgrnMk3hvhUBI&_nc_ohc=L9ciVImwCDIQ7kNvgE0S7uS&_nc_ht=scontent.fdad3-5.fna&oh=03_Q7cD1QFXTbRv8ksGJd9DyiVJts1eOjtIW6uAsBNq4R5xkfCOcw&oe=6691316D" />
           

            <b class="user011">@ViewData["Message"]</b>
            <img class="n-1-icon1"
                 alt=""
                 src="https://scontent.xx.fbcdn.net/v/t1.15752-9/435264282_1107310530502381_1832007922840023753_n.png?stp=cp0_dst-png&_nc_cat=105&ccb=1-7&_nc_sid=5f2048&_nc_eui2=AeEWw0jKlDzYG29vauLC2BRxJg-_qGl2dC4mD7-oaXZ0LmRBLhQT3PNGmmJczUgrzhH9vauygVsNzDWGfIeTVasP&_nc_ohc=7QbO5VWGLZcQ7kNvgGQ9hti&_nc_ad=z-m&_nc_cid=0&_nc_ht=scontent.xx&oh=03_Q7cD1QHuCahA-BZu5QRB0XzUuAmzHwPKWp8nrXBqtJI9nLtY8Q&oe=666F0A10" />
        </div>
        <div class="lch-lm-vic-c-nhn-child"></div>
        <div class="binh-minh-hotel-group">
            <div class="binh-minh-hotel1">BINH MINH HOTEL</div>
            <div class="rectangle-group">

                <div class="group-child3" id="rectangle1"></div>
                <div class="group-child4" id="rectangle2"></div>
                <a asp-controller="Doimatkhau" asp-action="Doimatkhau" class="doimatkhau" style="position: absolute; font-weight: 500;
                   display: inline-block; top: 13px; right: 190px;text-decoration: none; color:black;">Đổi mật khẩu</a>
                <a asp-controller="Login" asp-action="Logout" class="dang-xuat-link" style="position: absolute; font-weight: 500;
            display: inline-block; top: 13px; right: 30px;">Đăng xuất</a>
            </div>
        </div>
        <img class="istockphoto-1420738401-170667a-icon1"
             alt=""
             src="https://scontent.xx.fbcdn.net/v/t1.15752-9/434534001_1448732405736076_2728451762103298305_n.png?_nc_cat=108&ccb=1-7&_nc_sid=5f2048&_nc_eui2=AeE2P5sA1mJK9p7yZAhnHbdR3i0KWcVikJ_eLQpZxWKQn2eF8rUbJCrgvsFmWc-PcaF3QNeTMGaAO-LHN5k9EqKX&_nc_ohc=y7ljPR0JchcQ7kNvgE03-wU&_nc_ad=z-m&_nc_cid=0&_nc_ht=scontent.xx&oh=03_Q7cD1QG9qre1FGLtoQKCts7TZOT8HTrfrbjC9JweMbkUsVettA&oe=666F1CFE" />

        <div class="lch-lm-vic2">
            <div class="lch-lm-vic-item"></div>
            <div class="lch-lm-vic3">Lịch làm việc</div>
        </div>
        <div class="lch-lm-vic-c-nhn-item" id="rectangle"></div>
        <a asp-controller="Nhanvien" asp-action="Luongcanhan" style="text-decoration: none; color:white;" class="lng-c-nhn3">Lương cá nhân</a>
        <div class="lch-lm-vic-c-nhn-inner">
            <div class="lch-lm-vic-c-nhn-wrapper">
              
                <div class="lch-lm-vic4">Lịch làm việc cá nhân</div>
            </div>
        </div>
        <div class="lch">
            <div class="lch-child"></div>
            
        </div>
        <div class="mytable">
            @if (ViewBag.Lichlamviec != null && ViewBag.Lichlamviec.Count > 0)
            {
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th>Mã công việc</th>
                            <th>Ca làm</th>
                            <th>Ngày làm</th>
                            <th>Chi tiết công việc</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var congViec in ViewBag.Lichlamviec)
                        {
                            <tr>
                                <td>@congViec.MaCongViec</td>
                                <td>@congViec.CaLam</td>
                                <td>@congViec.NgayLam.ToString("dd-MM-yyyy")</td>
                                <td>@congViec.ChiTietCongViec</td>
                            </tr>
                        }
                    </tbody>
                </table>

            }
            else
            {
                <p>Danh sách công việc trống.</p>
            }
            <
        </div>
    </div>


    <script>
        var thngTinCNhn = document.getElementById("thngTinCNhn");
        if (thngTinCNhn) {
            thngTinCNhn.addEventListener("click", function (e) {
                window.location.href = "/Nhanvien/thongtin";
            });
        }
        var rectangle = document.getElementById("rectangle");
        if (rectangle) {
            rectangle.addEventListener("click", function (e) {
                window.location.href = "/Nhanvien/Luongcanhan";
            });
        }

        var lngCNhn = document.getElementById("lngCNhn");
        if (lngCNhn) {
            lngCNhn.addEventListener("click", function (e) {
                window.location.href = "/Nhanvien/Luongcanhan";
            });
        }
    </script>
</body>
</html>
