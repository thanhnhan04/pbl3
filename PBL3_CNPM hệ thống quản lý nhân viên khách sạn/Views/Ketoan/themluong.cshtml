    <script>
        function populateInputs() {
            var selectedOption = document.querySelector('#tenluong option:checked');

            if (selectedOption.value) {
                var lcb = selectedOption.getAttribute('data-lcb');
                var pc = selectedOption.getAttribute('data-pc');

                document.getElementById('lcb').value = lcb;
                document.getElementById('pc').value = pc;
            } else {
                document.getElementById('lcb').value = '';
                document.getElementById('pc').value = '';
            }
        }     
        var rectangle = document.getElementById("rectangle");
        if (rectangle) {
            rectangle.addEventListener("click", function (e) {
                window.location.href = "/Ketoan/Trangchuketoan"
            });
        }

        var rectangle1 = document.getElementById("rectangle1");
        if (rectangle1) {
            rectangle1.addEventListener("click", function (e) {
                // Please sync "Đổi mật khẩu - kt" to the project
            });
        }

        var frameContainer = document.getElementById("frameContainer");
        if (frameContainer) {
            frameContainer.addEventListener("click", function () {
                var anchor = document.querySelector("[data-scroll-to='ngXutText']");
                if (anchor) {
                    anchor.scrollIntoView({ block: "start", behavior: "smooth" });
                }
            });
        }

        var thngTinCNhn = document.getElementById("thngTinCNhn");
        if (thngTinCNhn) {
            thngTinCNhn.addEventListener("click", function (e) {
                window.location.href = "/Ketoan/xemthongtinluong"
            });
        }
    </script>
