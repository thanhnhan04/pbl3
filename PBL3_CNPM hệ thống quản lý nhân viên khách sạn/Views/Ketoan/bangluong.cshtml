                                    onclick="window.location.href='@Url.Action("Chinhsualuongnv", "Ketoan", new { id = luong.MaLuongNv })'">
                                        Chỉnh sửa
                                    </button>
                                    <button type="button" class="btn btn-danger"
                                            onclick="confirmUnlock('@Url.Action("xoaluongnv", "Ketoan",new { id = luong.MaLuongNv, thang = ViewData["Message2"].ToString()})')">
